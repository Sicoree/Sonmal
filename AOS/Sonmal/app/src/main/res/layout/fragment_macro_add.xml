<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="제목 (*)"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:hint="title 입력"
                android:padding="5dp"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="내용 (*)"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_title" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:hint="title 입력"
                android:padding="5dp"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_content" />

            <TextView
                android:id="@+id/tv_emoji_title"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="아이콘 (*)"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_content" />

            <TextView
                android:id="@+id/tv_emoji"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#FAF9F9"
                android:gravity="center"
                android:textSize="50dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_emoji_title" />

            <TextView
                android:id="@+id/tv_category"
                app:layout_constraintTop_toBottomOf="@id/tv_emoji"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/img_category1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="카테고리 (*)"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/img_category1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/img_category2"
                app:layout_constraintBottom_toTopOf="@id/tv_video"
                android:text="병원"/>

            <TextView
                android:id="@+id/img_category2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintStart_toEndOf="@id/img_category1"
                app:layout_constraintEnd_toStartOf="@id/img_category3"
                app:layout_constraintTop_toTopOf="@id/img_category1"
                app:layout_constraintBottom_toBottomOf="@id/img_category1"
                android:text="관공서"/>

            <TextView
                android:id="@+id/img_category3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintStart_toEndOf="@id/img_category2"
                app:layout_constraintEnd_toStartOf="@id/img_category4"
                app:layout_constraintTop_toTopOf="@id/img_category1"
                app:layout_constraintBottom_toBottomOf="@id/img_category1"
                android:text="교통"/>

            <TextView
                android:id="@+id/img_category4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toStartOf="@id/img_category5"
                app:layout_constraintStart_toEndOf="@id/img_category3"
                app:layout_constraintTop_toTopOf="@id/img_category1"
                app:layout_constraintBottom_toBottomOf="@id/img_category1"
                android:text="식당"/>

            <TextView
                android:id="@+id/img_category5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_category4"
                app:layout_constraintTop_toTopOf="@id/img_category1"
                app:layout_constraintBottom_toBottomOf="@id/img_category1"
                android:text="업무"/>

            <TextView
                android:id="@+id/img_category6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintStart_toEndOf="@id/img_category5"
                app:layout_constraintTop_toTopOf="@id/img_category5"
                app:layout_constraintBottom_toBottomOf="@id/img_category5"
                android:text="일상"/>

            <TextView
                android:id="@+id/tv_video"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="수어 영상"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_category1" />

            <Button
                android:id="@+id/btn_add_emoji"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                android:backgroundTint="#8BC34A"
                android:text="등록"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_emoji"
                app:layout_constraintStart_toEndOf="@id/tv_emoji"
                app:layout_constraintTop_toTopOf="@id/tv_emoji" />


            <VideoView
                android:id="@+id/videoView"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:backgroundTint="#F1F1F1"
                app:layout_constraintBottom_toTopOf="@id/btn_play"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_video" />


            <Button
                android:id="@+id/btn_play"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:enabled="false"
                android:text="Play / Stop"
                app:layout_constraintEnd_toStartOf="@+id/btn_record"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/videoView" />

            <Button
                android:id="@+id/btn_record"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#4CAF50"
                android:text="Record"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_play"
                app:layout_constraintTop_toBottomOf="@id/videoView" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_margin="3dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#009688"
                android:text="Add Macro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_play" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>