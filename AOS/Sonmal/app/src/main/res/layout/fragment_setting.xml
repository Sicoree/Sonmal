<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/tv_macro_add"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="매크로 등록"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/background_macro_choice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_macro_edit"/>


    <Button
        android:id="@+id/tv_macro_edit"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="매크로 수정"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/background_macro_choice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_macro_add"
        app:layout_constraintBottom_toTopOf="@id/tv_unregister"/>

    <Button
        android:id="@+id/tv_unregister"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="회원 탈퇴"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:background="@drawable/background_macro_choice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_macro_edit"
        app:layout_constraintBottom_toTopOf="@id/tv_app_info"/>

    <Button
        android:id="@+id/tv_app_info"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="앱 정보"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/background_macro_choice"
        app:layout_constraintTop_toBottomOf="@+id/tv_unregister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>